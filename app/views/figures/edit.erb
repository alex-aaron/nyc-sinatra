<h1>Edit Figure</h1>
<h2> Edits for <%= @figure.name %>:</h2>

<form action="figures/<%= @figure.id %>" method="POST">
<input type="hidden" name="_method" value="PATCH">
    <label for="figure_name">Name:</label>
        <input type="text" value="<%= @figure.name %>" id="figure_name" name="figure[name]">
    <h3>Titles</h3>
    <% Title.all.each do |title| %>
        <input type="checkbox" id="<%= title.name %>" name="figure[title_ids][]" value="<%= title.id %>"
        <%= 'checked' if @figure.titles.include?(title) %>><%= title.name %></input><br>
    <% end %>
    <br>
    <label for="new_title">Add new title:</label>
        <input type="text" id="new_title" name="title[name]"><br>

    <h3>Landmarks</h3>
    <% Landmark.all.each do |landmark| %>
        <input type="checkbox" id="<%= landmark.name %>" name ="figure[landmark_ids][]" value="<%= landmark.id %>"
        <%= 'checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %></input><br>
    <% end %>
    <br>
    <label for="new_landmark">Add new landmark:</label>
        <input type="text" id="new_landmark" name="landmark[name]">
    <br>
    <input type="submit" value="Edit Figure">
</form>